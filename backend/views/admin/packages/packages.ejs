
<%- include('.././layouts/header.ejs') %>
<%- include('.././layouts/sidebar.ejs') %>

 <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Plans</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin">Home</a></li>
              <li class="breadcrumb-item active">Plans</li>
              
            </ol>
          </div><!-- /.col -->
        </div>
        <div class="row>">
          <p class="breadcrumb-item active"><a href="/admin/packages/create"> Add new Plans</a></p>
        </div>
       
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Info boxes -->
        <div class="row">
          
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Amount</th>
              </tr>
            </thead>
            <tbody>
              <% for (var i = 0; i < packages.length; i++) { %>
              <tr>
                <th scope="row">1</th>
                <td> <%= packages[i].name %></td>
                <td> <%= packages[i].description %></td>
                <td>@ <%= packages[i].amount %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <!-- /.row -->

        <!-- Main row -->
        
        <!-- /.row -->
      </div><!--/. container-fluid -->
    </section>
    <!-- /.content -->
  </div>
